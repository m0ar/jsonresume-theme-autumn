{{#if resume.references.length}}
<section>
	<h2>Referrals</h2>
	{{#each resume.references}}
	<div class="p-2 bg-primary-100 rounded mb-2">
		{{#if reference}}
		<blockquote class="italic mb-2">
			{{reference}}
		</blockquote>
		{{/if}}
		{{#if name}}
		<div class="font-bold text-primary-500">
			{{name}}
		</div>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}
